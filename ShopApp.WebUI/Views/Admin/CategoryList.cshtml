@model CategoryListModel
@{
    ViewData["Title"] = "CategoryList";
}

<h1>Categories</h1>
<hr />
@if(Model.Categories.Count() > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Id</td>
                <td>CategoryName</td>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.CategoryName</td>
                    <td> 
                        <button class="btn btn-primary btn-sm mr-2" herf="admin/categories/@item.Id">Edit</button>
                        <form action="admin/deletecategory" method="post" style="display:inline">
                            <input type="hidden" name="categoryId" value="@item.Id" />
                        <button class="btn btn-danger btn-sm">Delete</button>    
                        </form>
                        </td>
                </tr>
            }
            
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>No Category</h4>
    </div>
}