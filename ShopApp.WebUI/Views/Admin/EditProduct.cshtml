@model ProductModel
@{
    ViewData["Title"] = "EditProduct";
}
<h1>Update Product</h1>
<hr />
<form asp-controller="Admin" asp-action="EditProduct" method="post">
<div class="row">
    <div class="col-md-8">
        
            <input type="hidden" name="Id" value="@Model.Id"/>
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" type="text" value="@Model.Name" class="form-control" />
                </div>

            </div>

            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="ImageUrl" type="text" value="@Model.ImageUrl" class="form-control" />
                </div>

            </div>


            <div class="form-group row">
                <label asp-for="Description" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <textarea id="editor" asp-for="Description" class="form-control">
                        @Model.Description
                    </textarea>
                </div>

            </div>


            <div class="form-group row">
                <label asp-for="Price" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Price" class="form-control" value="@Model.Price" />
                </div>

            </div>


            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Save Product</button>
                </div>

            </div>


 
    </div>
    <div class="col-md-4">
        @foreach (var item in (List<Category>)ViewBag.Categories)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="category@(item.Id)" name="categoryIds" value="@item.Id" @(Model.SelectedCategories.Any(i=>i.Id==item.Id)?"checked":"")>
                <label class="form-check-label" for="categor@(item.Id)">@item.CategoryName</label>
            </div>
        }
       
    </div>
</div>
</form>